{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types", // Specify the directory where .d.ts files should go
    "outDir": "./dist", // This ensures the compiled JavaScript goes to the dist folder
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "types": ["node"], // Ensure node types are included
    "target": "esnext",
    "module": "esnext"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
